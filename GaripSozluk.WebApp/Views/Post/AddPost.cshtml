@model GaripSozluk.Common.ViewModels.Post.NewPostVM

@{
    ViewData["Title"] = "Yeni Post";
}

<h1 class="display-4 text-success">@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col">
        <form asp-controller="Post" asp-action="AddPost">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="HeaderCode" />
            <input asp-for="CategoryCode" />

            <input asp-for="Status" />

            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" style="height:300px"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Postumu gönderiver" class="btn btn-success btn-block" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        var errors = @Json.Serialize(Model?.ValidationErrors);
    </script>
}
