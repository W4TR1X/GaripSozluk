@model RegisterVM
@{
    ViewData["Title"] = "Kaydol";
}

<div class="container">

    <br />
    <h2>@ViewData["Title"]</h2>
    <br />

    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input class="form-control" id="uname" placeholder="@Html.DisplayNameFor(x => x.Username)" asp-for="Username">
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MailAddress"></label>
                    <input class="form-control" id="mailaddress" placeholder="@Html.DisplayNameFor(x => x.MailAddress)" asp-for="MailAddress">
                    <span asp-validation-for="MailAddress"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate"></label>
                    <input class="form-control" id="birthdate" asp-for="BirthDate">
                    <span asp-validation-for="BirthDate"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input class="form-control" id="password" placeholder="@Html.DisplayNameFor(x => x.Password)" asp-for="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password2"></label>
                    <input class="form-control" id="password2" placeholder="@Html.DisplayNameFor(x => x.Password2)" asp-for="Password2">
                    <span asp-validation-for="Password2"></span>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Kaydol</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        var errors = @Json.Serialize(Model?.ValidationErrors);
    </script>
}
