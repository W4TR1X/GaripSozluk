@model LoginVM
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container">

    <br />
    <h2>@ViewData["Title"]</h2>
    <br />

    <form asp-controller="Account" asp-action="Login" method="post">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input class="form-control" id="uname" placeholder="@Html.DisplayNameFor(x => x.Username)" asp-for="Username">
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input class="form-control" id="password" placeholder="@Html.DisplayNameFor(x => x.Password)" asp-for="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe"> @Html.DisplayNameFor(x => x.RememberMe)
                    </label>
                    <span asp-validation-for="RememberMe"></span>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Giriş</button>
                    <a class="btn text-success" asp-controller="Account" asp-action="LostPassword">Şifremi unuttum</a>
                </div>
            </div>

        </div>
    </form>
</div>
@section Scripts {
    <script>
        var errors = @Json.Serialize(Model?.ValidationErrors);
    </script>
}
