@model PostHeaderListVM
@{
    ViewData["Title"] = "Home Page";
}

@foreach (var header in Model.Headers)
{

    <div>
        <div class="display-4">
            <a class="text-success" asp-controller="Home" asp-action="Index" asp-route-headerId="@header.HeaderId" asp-route-categoryId="@header.CategoryId">@header.HeaderTitle</a>
        </div>
        <div class="d-block d-inline d-flex justify-content-between">
            <p class="small">@header.ClickCount Görüntülenme</p><p class="small">@header.HeaderDate.ToString("dd/MM/yyyy HH:mm:ss")</p><p class="small">@header.Username</p>
        </div>
    </div>

    <div class="row mb-2 pb-2">
        @foreach (var post in header.Posts)
        {

            <div class="card col mt-3 mb-0 pl-0 pr-0 pt-1 pb-0 flex-fill shadow">
                <div class="card-body">
                    @post.Content
                </div>
                <div class="card-footer p-0 mt-3">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex justify-content-start">
                            @if (!post.IsApiResult)
                            {
                                <div class="p-2 mr-0 pr-0">
                                    <a class="btn @(post.LikeState == PostLikeState.Liked ? "text-success" : "text-black") mr-0 pr-0" asp-controller="Post" asp-action="Upvote"
                                        asp-route-headerId="@header.HeaderId" asp-route-postId="@post.PostId" asp-route-pageNumber="@Model.CurrentPage"><i class="fa fa-chevron-circle-up"></i>@post.LikeCount</a>
                                </div>
                                <div class="p-2 ml-0 pl-0">
                                    <a class="btn @(post.LikeState == PostLikeState.Disliked ? "text-danger" : "text-black") ml-0 pl-0" asp-controller="Post" asp-action="Downvote"
                                        asp-route-headerId="@header.HeaderId" asp-route-postId="@post.PostId" asp-route-pageNumber="@Model.CurrentPage"><i class="fa fa-chevron-circle-down"></i>@post.DislikeCount</a>
                                </div>
                            }
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="p-2 d-flex align-items-center small">
                                @if (post.IsApiResult)
                                {
                                    @post.PostDate.Year
                                }
                                else
                                {
                                    @post.PostDate.ToString("dd/MM/yyyy HH:mm:ss")
                                }
                            </div>
                            <div class="p-2 d-flex align-items-center small">
                                <div class="dropdown">
                                    @if (Model.Headers.Count == 1 && Context.User.Identity.Name != post.Username && !post.IsApiResult)
                                    {
                                        <button type="button" class="btn btn-light small dropdown-toggle" data-toggle="dropdown">
                                            @post.Username
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item btn-danger" asp-controller="Account" asp-action="BlockUser" asp-route-headerId="@header.HeaderId" asp-route-blockedUserId="@post.UserId">Engelle</a>
                                        </div>
                                    }
                                    else
                                    {
                                        @post.Username
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="container d-flex flex-row-reverse justify-content-between border-top border-success">
            @if (!header.IsApiResult)
            {
                <div class="btn-group mt-0 pt-0">
                    <a class="btn btn-success mt-0 pt-0 shadow" style=" border-radius: 0 0 20px 20px; height: 38px;" 
                        asp-controller="Post" asp-action="AddPost" asp-route-headerId="@header.HeaderId" asp-route-categoryId="@header.CategoryId">Post yaz</a>
                </div>
            }

            @if (Model.PageCount > 1)
            {
                <div class="btn-group mt-0 pt-0">
                    <ul class="pagination">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link text-success shadow"
                                   asp-controller="Home" asp-action="Index" asp-route-headerId="@header.HeaderId" asp-route-pageNumber="@(Model.CurrentPage-1)">
                                    <i class="fa fa-arrow-left"></i>
                                </a>
                            </li>
                        }
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            if (i == Model.CurrentPage)
                            {
                                <li class="page-item active">
                                    <label class="page-link bg-success border-success shadow">@i</label>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link text-success shadow" asp-controller="Home" asp-action="Index" asp-route-headerId="@header.HeaderId" asp-route-pageNumber="@i">@i</a>
                                </li>
                            }
                        }
                        @if (Model.CurrentPage < Model.PageCount)
                        {
                            <li class="page-item">
                                <a class="page-link text-success shadow"
                                   asp-controller="Home" asp-action="Index" asp-route-headerId="@header.HeaderId" asp-route-pageNumber="@(Model.CurrentPage+1)">
                                    <i class="fa fa-arrow-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
}